@{
    ViewData["Title"] = "Home Page";
}

@model ForecastViewModel

<div class="container-fluid">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            @Forecast.Resources.Common.Weather_Unavailable
        </div>
    }
    else
    {
        <div class="row py-5">
            @Html.DisplayFor(m => m.CurrentWeather, "CurrentWeatherViewModel", new { Title = Model.Location })
        </div>
        <div class="row">
            @Html.DisplayFor(m => m.FutureWeathers)
        </div>
    }
</div>
